<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="None">
    </style>

    <style name="Widget.Statik.Base.RowItem" parent="None">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingRight">?android:attr/listPreferredItemPaddingEnd</item>
    </style>

    <style name="Widget.Statik.Base.HeaderTextItem" parent="Widget.Statik.Base.RowItem">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/statik_margin_8dp</item>
        <item name="android:paddingBottom">@dimen/statik_margin_8dp</item>
    </style>

    <style name="Widget.Statik.Base.FooterTextItem" parent="Widget.Statik.Base.RowItem">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/statik_margin_8dp</item>
        <item name="android:paddingBottom">@dimen/statik_margin_8dp</item>
    </style>

    <style name="Widget.Statik.Base.PrimaryTextItem" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Statik.Base.SecondaryTextItem" parent="TextAppearance.AppCompat.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
